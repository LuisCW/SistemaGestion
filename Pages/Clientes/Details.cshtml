@page
@model CustomersClients.Pages.Clientes.DetailsModel
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Detalles del Cliente</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente.NombreCompleto)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.NombreCompleto)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente.Direccion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Direccion)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente.Telefono)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Telefono)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente.FechaCreacion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.FechaCreacion)</dd>
    </dl>
</div>

<div>
    <h3>Contactos</h3>
    <a asp-page="../Contactos/Create" asp-route-clienteId="@Model.Cliente.Id" class="btn btn-primary">Agregar Contacto</a>
    
    @if (Model.Cliente.Contactos.Any())
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contacto in Model.Cliente.Contactos)
                {
                    <tr>
                        <td>@contacto.NombreCompleto</td>
                        <td>@contacto.Direccion</td>
                        <td>@contacto.Telefono</td>
                        <td>
                            <a asp-page="../Contactos/Edit" asp-route-id="@contacto.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-page="../Contactos/Delete" asp-route-id="@contacto.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-3">No hay contactos registrados.</p>
    }
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Cliente.Id" class="btn btn-warning">Editar</a>
    <a asp-page="./Index" class="btn btn-secondary">Volver</a>
</div>
