@page
@model CustomersClients.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cliente.Id" />
            <input type="hidden" asp-for="Cliente.FechaCreacion" />
            
            <div class="form-group mb-3">
                <label asp-for="Cliente.NombreCompleto" class="control-label"></label>
                <input asp-for="Cliente.NombreCompleto" class="form-control" />
                <span asp-validation-for="Cliente.NombreCompleto" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Cliente.Direccion" class="control-label"></label>
                <input asp-for="Cliente.Direccion" class="form-control" />
                <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Cliente.Telefono" class="control-label"></label>
                <input asp-for="Cliente.Telefono" class="form-control" />
                <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
