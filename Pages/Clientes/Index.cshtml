@page
@model CustomersClients.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="bi bi-people-fill"></i> Administración de Clientes</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Crear Nuevo Cliente
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Clientes</h5>
                    <h2 class="display-4">@Model.TotalClientes</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Con Contactos</h5>
                    <h2 class="display-4">@Model.ClientesConContactos</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Sin Contactos</h5>
                    <h2 class="display-4">@Model.ClientesSinContactos</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Resultados</h5>
                    <h2 class="display-4">@Model.Clientes.Count</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros y Búsqueda</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Buscar</label>
                        <input type="text" asp-for="SearchString" class="form-control" placeholder="Nombre, dirección o teléfono..." />
                    </div>
                    
                    <div class="col-md-3">
                        <label class="form-label">Filtrar por Contactos</label>
                        <select asp-for="FiltroContactos" class="form-select">
                            <option value="">Todos</option>
                            <option value="con">Con contactos</option>
                            <option value="sin">Sin contactos</option>
                            <option value="multiples">Múltiples contactos</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" asp-for="FechaDesde" class="form-control" />
                    </div>
                    
                    <div class="col-md-2">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" asp-for="FechaHasta" class="form-control" />
                    </div>
                    
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.SearchString) || !string.IsNullOrEmpty(Model.FiltroContactos) || Model.FechaDesde.HasValue || Model.FechaHasta.HasValue)
                {
                    <div class="mt-3">
                        <a asp-page="./Index" class="btn btn-secondary btn-sm">
                            <i class="bi bi-x-circle"></i> Limpiar Filtros
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a asp-page="./Index" 
                                   asp-route-sortOrder="@Model.NombreSort" 
                                   asp-route-searchString="@Model.SearchString"
                                   asp-route-filtroContactos="@Model.FiltroContactos"
                                   asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                                   asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")"
                                   class="text-white text-decoration-none">
                                    Nombre Completo <i class="bi bi-arrow-down-up"></i>
                                </a>
                            </th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            <th>
                                <a asp-page="./Index" 
                                   asp-route-sortOrder="@Model.FechaSort" 
                                   asp-route-searchString="@Model.SearchString"
                                   asp-route-filtroContactos="@Model.FiltroContactos"
                                   asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                                   asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")"
                                   class="text-white text-decoration-none">
                                    Fecha Creación <i class="bi bi-arrow-down-up"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-page="./Index" 
                                   asp-route-sortOrder="@Model.ContactosSort" 
                                   asp-route-searchString="@Model.SearchString"
                                   asp-route-filtroContactos="@Model.FiltroContactos"
                                   asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                                   asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")"
                                   class="text-white text-decoration-none">
                                    Contactos <i class="bi bi-arrow-down-up"></i>
                                </a>
                            </th>
                            <th class="text-center" style="width: 250px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Clientes.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-2">No se encontraron clientes con los filtros aplicados</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Clientes)
                            {
                                <tr>
                                    <td><strong>@item.NombreCompleto</strong></td>
                                    <td>@item.Direccion</td>
                                    <td><i class="bi bi-telephone"></i> @item.Telefono</td>
                                    <td>
                                        <small>@item.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-person-lines-fill"></i> @item.Contactos.Count
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Ver Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .card {
            border-radius: 10px;
        }
        .table thead th {
            border-bottom: 2px solid #dee2e6;
        }
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
}

